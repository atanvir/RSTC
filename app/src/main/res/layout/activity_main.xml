                    <!--                    android:padding="5dp"-->
                    <!--                    android:backgroundTint="#E8E6E6"-->
                    <!--                    android:background="@drawable/rounded_corner"-->
                    <!--                    android:inputType="none"-->
                    <!--                    />-->

                    <Spinner
                        android:id="@+id/id_proof_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_spinner"
                        android:padding="5dp"
                        bind:selectedValue="@={data.id_proof}" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilProofDetail"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tieProofDetail"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:ems="10"
                        android:hint="@string/proof_details"
                        android:inputType="textMultiLine"
                        android:maxLength="30"
                        android:maxLines="5"
                        android:scrollbars="vertical"
                        android:text="@={data.proofDetail}"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:id="@+id/innerLine2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="4dp"
                    android:background="#ff0000" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="#000080"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="@string/collect_pass_form"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!--                    <TextView-->
