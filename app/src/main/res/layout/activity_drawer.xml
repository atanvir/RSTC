<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvRechargeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:padding="10dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:text="Recharge Card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Report "
        android:textSize="17dp"
        android:textColor="@color/black"


        app:layout_constraintEnd_toEndOf="@+id/tvLogout"
        app:layout_constraintStart_toStartOf="@+id/tvLogout"
        app:layout_constraintTop_toBottomOf="@+id/tvRechargeCard" />

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:textSize="17dp"
        android:textColor="@color/black"

        android:text="Logout "
        app:layout_constraintEnd_toEndOf="@+id/tvRechargeCard"
        app:layout_constraintStart_toStartOf="@+id/tvRechargeCard"
        app:layout_constraintTop_toBottomOf="@+id/tvReport" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
